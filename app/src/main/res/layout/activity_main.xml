    <Button
        android:id="@+id/bt_water_wave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水波纹进度" />

    <Button
        android:id="@+id/bt_refresh_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_water_wave"
        android:text="下拉刷新view" />

    <Button
        android:id="@+id/bt_slide_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_refresh_view"
        android:text="侧滑删除view" />

    <Button
        android:id="@+id/bt_scroll_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_slide_view"
        android:text="轮播图" />

    <Button
        android:id="@+id/bt_water_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_scroll_view"
        android:text="水波纹扩散" />

    <Button
        android:id="@+id/bt_sound_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_water_view"
        android:text="语音发送" />

    <Button
        android:id="@+id/bt_other_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@id/bt_water_wave"
        android:text="@string/other_one" />

    <Button
        android:id="@+id/bt_audio_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_water_view"
        android:text="流程进度展示" />

    <Button
        android:id="@+id/bt_bitmap_bomb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_audio_progress"
        android:text="bitmap爆炸" />

    <Button
        android:id="@+id/bt_radius_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_bitmap_bomb"
        android:text="圆角TextView" />

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="切换文本"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.study.longl.myselfviewdemo.Views.ByteBeatView.ByteBeatTextView
        android:id="@+id/etv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@id/btn"
        android:background="#000"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:textColor="#fff"
        android:textSize="20sp" />


</RelativeLayout>